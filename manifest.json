{
  "name": "Dyslexia Helper",
  "description": "The goal is to help with dyslexia. We'll see.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "extension-options/extension-options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "start-script.js"
      ]
    }
  ]
}
